<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-8 col-lg-6">

      <%= render  "shared/errors", obj: @category %>

      <%= form_with(model: @category, class: "bg-color-light shadow-lg rounded", id: "form", local: true) do |f| %>

      <h1 class="text-center"><%= request.path == new_category_path ? "Create a New Category" : "Edit Category" %></h1>

      <div class="form-group col mt-4 mb-5">
        <%= f.label "Category name", class: "font-color-blue" %>
        <%= f.text_field :name, 
          class: "form-control shadow-sm rounded",
          placeholder: "Enter a new category" %>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit class: "btn bg-color-blue font-color-light shadow-sm rounded" %>
        <%= link_to  "Cancel", articles_path, class: "btn btn-danger ml-1 shadow-sm rounded bg-color-red" %>
      </div>

      <% end %>
    </div>
  </div>
</div>
