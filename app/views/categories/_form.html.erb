<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">

      <%= render  "shared/errors", obj: @category %>

      <%= form_with(model: @category, class: "shadow p-3 rounded", id: "form", local: true) do |f| %>

      <div class="form-group col">
        <%= f.label "Category name", class: "text-light" %>
        <%= f.text_field :name, 
          class: "form-control shadow rounded",
          placeholder: "Enter a new category" %>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-success mr-1 shadow rounded" %>
        <%= link_to  "Cancel", articles_path, class: "btn btn-danger shadow rounded" %>
      </div>

      <% end %>
    </div>
  </div>
</div>
