<% content_for :body_class, "articles-container" %>

<h1 class="display-4 text-center mt-5 mb-5 font-color-dark-red">Categories</h1>
<hr class="col-sm-9 col-md-10 col-lg-10 bg-color-dark-red mb-3">
<%= render 'shared/pagination', obj: @categories %>
<div class="my-4"></div>

<div class="container">
  <div class="row justify-content-center">
    <% @categories.each do |category| %>
      <div class="col-sm-9 col-lg-6">
        <div class="menu-anchor-parent bg-color-light-shade rounded shadow-sm mb-4 pl-md-5 pl-sm-1 pr-md-5 pl-sm-1 pt-3 pb-3">
          <% if logged_in? && current_user.admin? %>
            <%= link_to "#", { class: "menu-anchor btn rounded dropdown-toggle dropdown-toggle-split options-dropdown", id:"dropdownMenuLink", role:"button", data: { toggle:"dropdown"}, aria: { haspopup:"true", expanded:"false"}}  do %>
              <%= fa_icon "ellipsis-v" %>
            <% end %>
            <div class="dropdown-menu shadow-lg dropdown-menu-right bg-color-light">
                <%= link_to edit_category_path(category), class: "dropdown-item" do %>
                  <%= fa_icon "edit", class:"menu-icon" %>&nbsp;Edit
                <% end %>
                <%= link_to category_path(category), method: :delete, class: "dropdown-item",
                  data: { confirm: "Are you sure you want to delete the category '#{category.name}'?" } do %>
                  <%= fa_icon "trash", class:"menu-icon" %>&nbsp;Delete
                <% end %>
            </div>
          <% end %>
          <div class="row">
            <div class="col">
              <%= link_to category, class: "font-color-dark-red link" do %>
                <h3 class="card-title text-center mb-2 mt-4"><%= category.name %></h5>
              <% end %>
            </div>
          </div>
          <div class="row mb-1">
            <div class="col text-center card-subtitle">
              <i><%= pluralize(category.articles.count, "article") %></i>
            </div>
          </div>
          <div class="row mb-2">
            <div class="col text-center font-italic card-subtitle">
              <small>Created <%= distance_of_time_in_words_to_now(category.created_at) %> ago</small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="my-4"></div>
<%= render 'shared/pagination', obj: @categories %>
<div class="my-5"></div>

