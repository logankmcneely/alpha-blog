<h1 class="display-4 text-center mt-5 mb-5 font-color-dark-red"><%= @category.name %>

  <% if logged_in? && current_user.admin? %>
    <%= link_to "#", { class: "admin-access-categories btn dropdown-toggle dropdown-toggle-split options-dropdown", id:"dropdownMenuLink", role:"button", data: { toggle:"dropdown"}, aria: { haspopup:"true", expanded:"false"}}  do %>
      <%= fa_icon "ellipsis-v" %>
    <% end %>
    <div class="dropdown-menu shadow-lg dropdown-menu-right bg-color-light">
        <%= link_to edit_category_path(@category), class: "dropdown-item" do %>
          <%= fa_icon "edit" %>&nbsp;Edit
        <% end %>
        <%= link_to category_path(@category), method: :delete, class: "dropdown-item",
          data: { confirm: "Are you sure you want to delete the category '#{@category.name}'?" } do %>
          <%= fa_icon "trash" %>&nbsp;Delete
        <% end %>
    </div>
  <% end %>

</h1>



<hr class="col-sm-12 col-md-10 col-lg-8 bg-color-dark-red mb-5">

<% if @category.articles.count > 0 %>
  <%= render 'shared/pagination', obj: @articles  %>
  <div class="my-4"></div>
  <%= render 'articles/article' %>
  <div class="my-4"></div>
  <%= render 'shared/pagination', obj: @articles  %>
  <div class="my-5"></div>
<% else %>
  <h5 class="text-center font-italic font-weight-light mt-3">This user has no articles at this time.</h5>
<% end %>
