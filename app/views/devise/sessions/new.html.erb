<% content_for :body_class, "page-container" %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-8 col-lg-6 bg-color-light shadow-sm rounded p-5">

      <h1 class="text-center font-color-blue"><%= t('.sign_in') %></h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "forms"} ) do |f| %>

        <div class="form-group col">
          <%= f.label :email, class: "font-color-blue" %>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control shadow rounded' %>
        </div>

        <div class="form-group col">
          <%= f.label :password, class: "font-color-blue" %>
          <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control shadow rounded' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group form-check ml-3">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label :remember_me, class: 'form-check-label font-color-blue' do %>
              <%= resource.class.human_attribute_name('remember_me') %>
            <% end %>
          </div>
        <% end %>

        <div class="form-group col">
          <%= f.submit  t('.sign_in'), class: 'btn bg-color-blue font-color-light shadow rounded' %>
        </div>

        <div class="col">
          <%= render 'devise/shared/links' %>
        </div>

      <% end %>

      

    </div>
  </div>
</div>
