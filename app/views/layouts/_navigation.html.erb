<nav class="navbar fixed-top navbar-expand-lg navbar-light bg-color-light shadow">
  <div class="container">
    <%= link_to  "ALPHA BLOG", root_path, class: "navbar-brand", id: "logo" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <%= fa_icon "bars", class:"font-color-red" %>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">

        <li class="nav-item">
          <%= link_to  "Bloggers", users_path, class: "nav-link" %>
        </li>

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Articles
          </a>
          <div class="dropdown-menu shadow-lg bg-color-light" aria-labelledby="navbarDropdown">
            <%= link_to  "View Articles", articles_path, class: "dropdown-item" %>
            <% if logged_in? %>
              <%= link_to  "Create Article", new_article_path, class: "dropdown-item" %>
            <% end %>
          </div>
        </li>

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Categories
          </a>
          <div class="dropdown-menu shadow-lg bg-color-light" aria-labelledby="navbarDropdown">
            <%= link_to  "View Categories", categories_path, class: "dropdown-item" %>
            <% if logged_in? && current_user.admin? %>
              <%= link_to  "Create Category", new_category_path, class: "dropdown-item" %>
            <% end %>
          </div>
        </li>

      </ul>
      <ul class="navbar-nav ml-auto">
        <% if logged_in? %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= current_user.username %> <%= "(Admin)" if current_user.admin? %>&nbsp;<%= fa_icon "caret-down" %>
            </a>
            <div class="dropdown-menu shadow-lg bg-color-light" aria-labelledby="navbarDropdown">
              <%= link_to current_user, class: "dropdown-item" do %>
                <%= fa_icon "user", class:"nav-icon" %>&nbsp;&nbsp;View Profile
              <% end %>
              <%= link_to edit_user_path(current_user), class: "dropdown-item" do %>
                <%= fa_icon "edit", class:"nav-icon" %>&nbsp;&nbsp;Edit Profile
              <% end %>
              <%= link_to user_path(current_user), method: :delete, 
                data: { confirm: "Are you sure you want to delete your profile?" },
                class: "dropdown-item text-danger" do %>
                <%= fa_icon "trash", class:"nav-icon" %>&nbsp;&nbsp;Delete Profile
              <% end %>
              <div class="dropdown-divider nav-divider"></div>
              <%= link_to logout_path, class: "dropdown-item", method: :delete do %>
                <%= fa_icon "sign-out", class:"nav-icon" %>&nbsp;&nbsp;Logout
              <% end %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to  "Sign Up", signup_path, class: "nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to  "Login", login_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
</nav>
</div>
