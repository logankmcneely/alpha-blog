<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-8 col-lg-6">

      <%= render 'layouts/messages' %>

      <%= form_with(scope: :session, url: login_path, class: "bg-color-light shadow-lg rounded", id: "form", local: true) do |f| %>

      <h1 class="text-center">Login</h1>

      <div class="form-group col  mt-4">
        <%= f.label :email, class: "font-color-blue" %>
        <%= f.email_field :email, 
          class: "form-control shadow rounded",
          placeholder: "Enter your email" %>
      </div>

      <div class="form-group col mb-5">
        <%= f.label :password, class: "font-color-blue" %>
        <%= f.password_field :password, 
          class: "form-control shadow rounded",
          placeholder: "Enter your password" %>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit "Login", class: "btn btn-lg bg-color-blue font-color-light shadow-sm rounded" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
