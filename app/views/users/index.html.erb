<% content_for :body_class, "articles-container" %>

<h1 class="display-4 text-center mt-5 mb-5 font-color-dark-red">Bloggers</h1>
<hr class="col-sm-7 col-md-8 col-lg-10 bg-color-dark-red mb-3">
<%= render 'shared/pagination', obj: @users %>
<div class="my-4"></div>

<div class="container">
  <div class="row justify-content-center">
    <% @users.each do |user| %>
      <div class="col-sm-10 col-lg-6">
        <div id="blogger-card" class="menu-anchor-parent bg-color-light-shade rounded shadow-sm mb-4 pl-md-5 pl-sm-1 pr-md-5 pl-sm-1 pt-3 pb-3">
          <% if logged_in? && current_user.admin? && !user.admin %>
            <%= link_to "#", { class: "menu-anchor rounded dropdown-toggle dropdown-toggle-split options-dropdown", id:"dropdownMenuLink", role:"button", data: { toggle:"dropdown"}, aria: { haspopup:"true", expanded:"false"}}  do %>
              <%= fa_icon "ellipsis-v" %>
            <% end %>
            <div class="dropdown-menu shadow-lg dropdown-menu-right bg-color-light">
              <%= link_to user, method: :delete, class: "dropdown-item",
                data: { confirm: "Are you sure you want to delete the user '#{user.username}'?" } do %>
                <%= fa_icon "trash", class: "menu-icon" %>&nbsp;Delete
              <% end %>
            </div>
          <% end %>
          <div class="row">
            <div class="col">
              <h3 class="card-title text-center mb-2 mt-4"><%= link_to user.username, user, class: "font-color-dark-red link" %></h5>
            </div>
          </div>
          <div class="row mb-1">
            <div class="col text-center card-subtitle">
              <i><%= pluralize(user.articles.count, "article") %></i>
            </div>
          </div>
          <div class="row mb-2">
            <div class="col text-center font-italic card-subtitle">
              <small>Joined <%= distance_of_time_in_words_to_now(user.created_at) %> ago</small>
            </div>
          </div>
          <% if User.get_categories(user.id).any? %>
            <div class="row justify-content-center align-items-center mb-2">
              <%= render User.get_categories(user.id).slice(..3) %>
            </div>
          <% end %>
          <div class="my-4"></div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="my-4"></div>
<%= render 'shared/pagination', obj: @users %>
<div class="my-5"></div>
