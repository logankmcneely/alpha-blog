<h2 class="text-center pt-3 pb-3 bg-color-light font-color-red font-weight-bold shadow-sm">Bloggers</h2>
<div class="my-4"></div>

<div class="container">
  <div class="row justify-content-center">
    <% @users.each do |user| %>
        <div class="col-sm-10 col-md-6 col-lg-5">

        <div class="card-container menu-anchor-parent bg-color-light-shade rounded shadow-sm mb-4 p-1" data-link="<%= user_path(user) %>">

          <%# Admin options %>
          <% if logged_in? && current_user.admin? && !user.admin %>
            <%= link_to "#", { class: "menu-anchor rounded dropdown-toggle dropdown-toggle-split options-dropdown", id:"dropdownMenuLink", role:"button", data: { toggle:"dropdown"}, aria: { haspopup:"true", expanded:"false"}}  do %>
              <%= fa_icon "ellipsis-v" %>
            <% end %>
            <div class="dropdown-menu shadow-lg dropdown-menu-right bg-color-light">
              <%= link_to user, method: :delete, class: "dropdown-item",
                data: { confirm: "Are you sure you want to delete the user '#{user.username}'?" } do %>
                <%= fa_icon "trash", class: "menu-icon" %>&nbsp;Delete
              <% end %>
            </div>
          <% end %>


          <div class="row no-gutters">

            <%# Image Section %>
            <div class="col-4">
              <%= image_tag "#{user.image_url}", class: "category-image img-responsive" %> 
            </div>


            <%# Info Section %>
            <div class="category-info col-8 bg-color-light-tint p-4">
              <div class="row">
                <div class="col-12">
                  <h5 class="font-color-blue"><%= user.username %></h5>
                </div>
                <div class="col-12 card-subtitle">
                  <i><%= pluralize(user.articles.count, "article") %></i>
                </div>
                <div class="col-12">
                  <small>Joined <%= distance_of_time_in_words_to_now(user.created_at) %> ago</small>
                </div>
                <div class="col-12">
                  <% if User.get_categories(user.id).any? %>

                      <%= render User.get_categories(user.id).slice(..3) %>

                  <% end %>
                </div>
              </div>

            </div>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="my-4"></div>
<%= render 'shared/pagination', obj: @users %>
