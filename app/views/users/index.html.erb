<% content_for :body_class, "articles-container" %>

<h1 class="display-4 text-center mt-5 mb-5 font-color-dark-red">Bloggers</h1>
<hr class="col-sm-9 col-md-10 col-lg-10 bg-color-dark-red mb-5">
<%= render 'shared/pagination', obj: @users %>
<div class="my-4"></div>

<div class="container">
  <div class="row justify-content-center">
    <% @users.each do |user| %>
      <div class="col-sm-9 col-lg-6">
        <div class="article bg-color-light-shade rounded shadow-sm mb-4 mt-4 pl-md-5 pl-sm-1 pr-md-5 pl-sm-1 pt-3 pb-3">
          <div class="row">
            <div class="col">
              <%= link_to user, class: "font-color-dark-red link" do %>
                <h3 class="card-title text-center mb-2 mt-4"><%= user.username %></h5>
              <% end %>
            </div>
          </div>
          <div class="row mb-1">
            <div class="col text-center card-subtitle">
              <i><%= pluralize(user.articles.count, "article") %></i>
            </div>
          </div>
          <div class="row mb-2">
            <div class="col text-center font-italic card-subtitle">
              <small>Joined <%= distance_of_time_in_words_to_now(user.created_at) %> ago</small>
            </div>
          </div>
          <% if User.get_categories(user.id).any? %>
            <div class="row justify-content-center align-items-center mb-2">
              <%= render User.get_categories(user.id).slice(..3) %>
            </div>
          <% end %>
          <div class="my-4"></div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="my-4"></div>
<%= render 'shared/pagination', obj: @users %>
<div class="my-5"></div>
