<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">

      <%= render  "shared/errors", obj: @user %>

      <%= form_with(model: @user, class: "shadow p-3 rounded", id: "form", local: true) do |f| %>

      <div class="form-group col">
        <%= f.label :username, class: "text-light" %>
        <%= f.text_field :username, 
          class: "form-control shadow rounded",
          placeholder: "Enter a username" %>
      </div>

      <div class="form-group col">
        <%= f.label :email, class: "text-light" %>
        <%= f.email_field :email, 
          class: "form-control shadow rounded",
          placeholder: "Enter your email" %>
      </div>

      <div class="form-group col">
        <%= f.label :password, class: "text-light" %>
        <%= f.password_field :password, 
          class: "form-control shadow rounded",
          placeholder: "Choose a password" %>
      </div>

      <div class="form-group row justify-content-center">
        <%= f.submit "Sign up", class: "btn btn-success mr-1 shadow rounded" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
