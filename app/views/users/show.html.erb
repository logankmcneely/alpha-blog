<h2 class="text-center pt-3 pb-3 bg-color-blue font-color-light font-weight-bold shadow-sm"><%= @user.full_name%></h2>
<div class="my-4"></div>

<% if @user.articles.count > 0 %>
  <%= render 'articles/article' %>
  <div class="my-4"></div>
  <%= render 'shared/pagination', obj: @articles %>
<% else %>
  <h5 class="text-center font-italic font-weight-light mt-3">This user has no articles at this time.</h5>
<% end %>
