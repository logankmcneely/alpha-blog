<%= puts @user %>
<h1 class="text-center mt-4 mb-4"><%= @user.username%></h1>

<%= gravatar_for @user, size: 200 %>

<% if logged_in? && current_user == @user %>
<div class="text-center mt-4">
  <%= link_to  "Edit profile", 
    edit_user_path(@user), 
    class: "btn btn-warning" %>
</div>
<% end %>

<h3 class="text-center mt-4 mb-4">Articles</h3>
<hr class="my-4 mr-5 ml-5">

<% if @user.articles.count > 0 %>
<%= render 'shared/pagination', obj: @articles  %>
<%= render 'articles/article' %>
<div class="flickr_pagination mb-5">
  <%= will_paginate @articles, :container => false %>
</div>
<% else %>
<h5 class="text-center font-italic font-weight-light mt-3">This user has no articles at this time.</h5>
<% end %>
