<div class="container p-0">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-lg-9 pt-sm-5 pb-sm-5">

      <%= render  "shared/errors", obj: @article %>

      <%= form_with(model: @article_message, class: "forms bg-color-light pl-2 pr-2 pt-5 pb-5 p-sm-5", local: true) do |f| %>

      <div class="form-group">
        <%= f.rich_text_area :body, class: "article-description-input shadow-sm rounded" %>
      </div>

      <div class="form-group">
        <%= f.submit class: "btn bg-color-blue font-color-light shadow-sm rounded" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
