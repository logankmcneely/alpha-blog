<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 mt-5 mb-5">

      <%= render  "shared/errors", obj: @article %>

      <%= form_with(model: @article, class: "forms bg-color-light shadow-lg rounded p-5", local: true) do |f| %>

      <h1 class="text-center font-color-blue"><%= request.path == new_article_path ? "Create Article" : "Edit Article" %></h1>

      <div class="form-group">
        <%= f.label :title, class: "font-color-blue" %>
        <%= f.text_field :title, 
          class: "form-control shadow-sm rounded" %>
      </div>

      <div class="form-group">
        <%= f.label "Image URL", class: "font-color-blue" %>
        <%= f.text_field :image_url, 
          class: "form-control shadow-sm rounded",
          placeholder: "ex: https://i.imgur.com/bfisKOG.png" %>
      </div>

      <div class="form-group">
        <%= f.label :description, class: "font-color-blue" %>
        <%= f.rich_text_area :description, class: "article-description-input shadow-sm rounded" %>
      </div>

      <div class="form-group">
        <%= f.label "Category", class: "font-color-blue" %>
          <%= f.collection_select(:category_ids, Category.all, :id, :name,
            { prompt: false }, { multiple: true, class: "custom-select shadow-sm rounded" } ) %>
      </div>

      <div class="form-group">
        <%= f.submit class: "btn bg-color-blue font-color-light shadow-sm rounded" %>
        <%= link_to "Cancel", articles_path, class: "ml-2" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
